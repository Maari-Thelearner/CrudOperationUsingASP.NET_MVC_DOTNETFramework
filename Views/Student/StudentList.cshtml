@model List<WebApplication1.Context.tbl_Student>
@{
    ViewBag.Title = "StudentList";
}

<table class="table table-hover">
    <tr>
        <th>Name</th>
        <th>FName</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Description</th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Fname</td>
            <td>@item.Email</td>
            <td>@item.Mobile</td>
            <td>@item.Description</td>
            <td>
                <a href="@Url.Action("Student",new { item.ID,item.Name,item.Fname,item.Email,item.Mobile,item.Description})"><i class="btn btn-primary">Edit</i></a>
                <a href="@Url.Action("Delete",new { item.ID})"><i class="btn btn-danger">Delete</i></a>
            </td>
        </tr>
    }
</table>

